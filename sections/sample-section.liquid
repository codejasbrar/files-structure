<div class="first">
  <h1>{{ section.settings.heading }}</h1>
  <p>{{ section.settings.content }}</p>
  <img src="{{ section.settings.image | img_url:'master' }}">
</div>
{% schema %}
  {
    "name": "Sample section",
    "settings": [
         {
          "type": "text",
          "id": "heading",
          "label": "Heading text"
         },
         {
          "type": "textarea",
          "id": "content",
          "label": "Paragraph"
         },
         {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
         }
]
  }
{% endschema %}

