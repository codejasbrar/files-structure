<div class="first">
  <h1> {{section.settings.heading}}</h1>
  <p>{{section.settings.content}}</p>
  <img class="img-fluid" src="{{section.settings.image | img_url: 'master' }}" width="100%" />
</div>

{% schema %}
  {
    "name": "ali-section",
    "settings": [
		{
			"type": "text",
			"id": "heading",
			"label": "Heading text"
		},
		{
			"type": "textarea",
			"id": "content",
			"label": "Paragraph"
		},
		{
			"type": "image_picker",
			"id": "image",
			"label": "Image"
		}
	]
  }
{% endschema %}

