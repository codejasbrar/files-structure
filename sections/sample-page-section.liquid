<div class="first">
  <h1>{{ section.settings.heading }}</h1>
  <p>{{ section.settings.content }}</p>
    <div>{{ section.settings.custom_text_body }}</div>
  <img src="{{ section.settings.image | img_url:'master' }}">
  

</div>
{% schema %}
  {
    "name": "Sample section",
    "settings": [
         {
          "type": "text",
          "id": "heading",
          "label": "Heading text"
         },
         {
          "type": "textarea",
          "id": "content",
          "label": "Paragraph"
         },
         {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
         },
        {
        "id": "custom_text_body",
        "type": "richtext",
        "label": "Add custom text below",
        "default": "<p>Add your text here</p>"
      }
]
  }
{% endschema %}

